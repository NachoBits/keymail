<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/signin.css">
  </head>

  <body>

    <!-- Sign-In Page  -->
    <div class="container-fluid">

      <!-- Welcome Message -->
      <p><h1 id="welcome">Welcome to KeyMail!</h1></p>

      <!-- Grey Sign In Box   -->
      <div class="jumbotron vertical-center" align="center">   
        <form class="form-signin" role="form" method="post">        

          <!-- Sign in Message -->         
          <p><h3>Sign in to reclaim your privacy...</h3></p>

          <!-- Envelope Icon -->
          <img src="/images/keyMailLogo.png" class="img-thumbnail" alt="Key Mail Logo">          
          
          <!-- Input Boxes for Email and Password -->
          <input type="email" class="form-control" placeholder="Email address" required="" autofocus="">
          <input type="password" class="form-control" placeholder="Password" required="">
     
          <!--<button type="submit" class="btn btn-default">Sigh in</button>-->
          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
          
        </form>
      </div> 
    </div>

    <!-- Footer -->
    <div class="footer">
      <div class="container">
        <a href="../about"><span class="glyphicon glyphicon-info-sign info-icon"></span></a>
      </div>
    </div>

    <!-- Must include for jquery and bootstrap, in this order -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  
  </body>
</html>
